@model IEnumerable<Smart.Models.Cliente>


@{
    ViewData["Title"] = "Clientes";
}

<!-- <h2>Clientes</h2> -->

    <div class="mt-4">
         <a asp-action="New" class="btn btn-primary">Novo</a>
       
    </div>

     <div class="card mt-4">
        <div class="card-header">
         Lista de Clientes
     </div>

           <div class="card-body">
            <div class="row">
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">

            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.ContatoId)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Contatos.Email)
            </th>
          
            <th>
                Ações
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.ContatoId)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Contatos.Email)
                </td>
               
                
                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
